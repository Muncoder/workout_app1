<h1>
	Exercises List of <span class="well"><%= current_user.full_name %></span>
</h1>
<br>
<br>
<table class="table table-bordered table-condensed table-striped">
	<thead class="table-header">
		<tr>
			<th>Duration in Min</th>
			<th>Workout</th>
			<th>Workout date</th>
			<th colspan="3" class="text-center">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @exercises.each do |exercise| %>
			<tr>
				<td><%= exercise.duration_in_min %></td>
				<td><%= exercise.workout %></td>
				<td><%= exercise.workout_date %></td>
				<td class="text-center">
					<%= link_to "Show", user_exercise_path(current_user, exercise), class: "btn btn-xs btn-info" %>
				</td>
				<td class="text-center">
					<%= link_to "Edit", edit_user_exercise_path(current_user, exercise), class: "btn btn-xs   btn-primary"  %>
				</td>
				<td>
					<%= link_to "Delete", user_exercise_path(current_user, exercise), method: :delete, data: { confirm: "Sury to Delete? "}, class: "btn btn-danger btn-xs"  %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New Exercise", new_user_exercise_path(current_user), class: "btn btn-primary" %>

<br>

<%= content_tag :div, "", id: "chart", data: {workouts: @exercises} %>