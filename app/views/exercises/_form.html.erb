<div class="container">
	<%= form_for([current_user, @exercise], :html => { class: 'form-horizontal', role: "form" }) do |f| %>

		<% if @exercise.errors.any? %>
			<ul>
				<% @exercise.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		<% end %>
		
		<div class="form-group">
			<%= f.label :duration_in_min %>
			<%= f.text_field :duration_in_min, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :workout %>
			<%= f.text_area :workout, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :workout_date %>
			<%= f.text_field :workout_date, class: "form-control", id: 'workout-date' %>
		</div>
</div>
		
		<% if params[:action] == "new" %>
			<%= f.submit "Create Exercise", class: "btn btn-info" %>
		<% else %>
			<%= f.submit "Update Exercise", class: "btn btn-success" %>
		<% end %>

	<% end %>	


